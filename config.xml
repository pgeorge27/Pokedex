<?xml version='1.0' encoding='utf-8'?>
<widget id="com.icomp.pay.pokedex" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pokedex</name>
    <description>
        Lista de pokemon
    </description>
    <author email="contacto@icomp.co.ve" href="http://icomp.co.ve">
        Icomp Team
    </author>
    <content src="www.pokemon.com/es/pokedex/index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#3C3C3C"/>
</widget>
